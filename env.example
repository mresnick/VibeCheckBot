# Discord Bot Configuration
# Copy this file to .env and replace the placeholders with your actual tokens
DISCORD_TOKEN=your_discord_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Vibe Check Configuration
# Number of messages to collect for channel vibe check
CHANNEL_MESSAGE_LIMIT=20
# Number of messages to collect per channel for server vibe check
SERVER_MESSAGE_LIMIT=10
# Number of messages to collect per channel for user vibe check
USER_MESSAGE_LIMIT=50
# Number of messages to use for channel/user/server vibe image generation
IMAGE_MESSAGE_LIMIT=10
# OpenAI model to use for vibe checks
OPENAI_MODEL_NAME=gpt-4.1-nano
# Chance (0.0 to 1.0) of checking a message for vibe (default: 0.05)
MESSAGE_CHECK_CHANCE=0.05

# Reaction Interval Settings
MIN_REACTION_INTERVAL=30
MAX_REACTION_INTERVAL=300

# Maximum number of tokens for OpenAI responses (default: 1000)
MAX_TOKENS=1000 